@model List<Lesson>

@if(Model?.Count() >0)
{
    <div class="d-flex justify-content-center">
        @foreach (var item in Model)
        {

            <div class="card">
                <h5 class="card-header">@item.Title</h5>
                <div class="card-body">
                    <h5 class="card-header">@item.Description</h5>
                    <h6 class="card-title">@item.Courses?.Title</h6>
                    <p class="card-text">@item.UploadedAt</p>

                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.LessonId" class="btn btn-success w-100">View Course</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <h5>No uploaded lesson yet nigga:(</h5>
}
