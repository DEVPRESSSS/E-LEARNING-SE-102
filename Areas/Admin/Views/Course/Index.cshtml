@model List<Courses>

<div class="shadow-lg mt-5 p-2">

    <div class="border-bottom-1">
        <h6>Courses list</h6>

    </div>
    <a class="btn btn-success" asp-action="Upsert" asp-controller="Course">Create</a>
    <table class="table">
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Created</td>
            <td>Action</td>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseId</td>
                <td>@item.Title</td>
                <td>@item.CreatedAt?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Upsert" asp-controller="Course" asp-route-id="@item.CourseId">Edit</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Course" asp-route-id="@item.CourseId">Delete</a>
                </td>
            </tr>
        }

    </table>

</div>
