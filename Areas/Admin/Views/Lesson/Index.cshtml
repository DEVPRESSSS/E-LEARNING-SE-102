@model List<Lesson>


<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 text-dark fw-semibold">Lesson Management</h5>
                <a class="btn btn-success btn-sm" asp-action="Upsert" asp-controller="Lesson">
                    <i class="bi bi-plus-circle me-1"></i>Add New Lesson
                </a>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="text-muted small fw-semibold">LessonId</th>
                                <th scope="col" class="text-muted small fw-semibold">Title</th>
                                <th scope="col" class="text-muted small fw-semibold">Description</th>
                                <th scope="col" class="text-muted small fw-semibold">Course</th>
                                <th scope="col" class="text-muted small fw-semibold">UploadedAt</th>
                                <th scope="col" class="text-muted small fw-semibold">Action</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted small">@item.LessonId</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    <span class="badge bg-light text-dark border">@item.Courses?.Title</span>
                                </td>
                                <td>@item.UploadedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="Lesson" asp-action="Upsert" asp-route-id="@item.LessonId">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a class="btn btn-outline-danger" asp-controller="Lesson" asp-action="Lock" asp-route-id="@item.LessonId">
                                        <i class="fas fa-lock"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">No users Lesson. Create your Lesson to get started.</p>
                    <a class="btn btn-success mt-2" asp-action="Upsert" asp-controller="Content">
                        <i class="bi bi-plus-circle me-1"></i>Add New Lesson
                    </a>
                </div>
            }
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="card-footer bg-white border-top text-muted small py-2">
                <span>Total Users: <strong>@Model.Count</strong></span>
            </div>
        }
    </div>
</div>
