@model List<Lesson>


<div class="shadow-lg mt-5 p-2">

    <div class="border-bottom-1">
        <h6>Lesson list</h6>

    </div>
    <a class="btn  btn-primary" asp-action="Upsert" asp-controller="Lesson">Create</a>
    <table class="table">
        <tr>
            <td>LessonId</td>
            <td>Title</td>
            <td>Description</td>
            <td>Course</td>
            <td>UploadedAt</td>
            <td>Action</td>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LessonId</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Courses?.Title</td>
                <td>@item.UploadedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Lesson" asp-action="Upsert" asp-route-id="@item.LessonId">Edit</a>
                    <a class="btn btn-outline-danger" asp-controller="Lesson" asp-action="Lock" asp-route-id="@item.LessonId">Lock</a>
                </td>
            </tr>
        }

    </table>

</div>
