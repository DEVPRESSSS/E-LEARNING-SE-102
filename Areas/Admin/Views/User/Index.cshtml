@model List<ApplicationUser>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 text-dark fw-semibold">User Management</h5>
            <a class="btn btn-success btn-sm" asp-action="Upsert" asp-controller="User">
                <i class="bi bi-plus-circle me-1"></i>Add New User
            </a>
        </div>
        
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="text-muted small fw-semibold">User ID</th>
                                <th scope="col" class="text-muted small fw-semibold">First Name</th>
                                <th scope="col" class="text-muted small fw-semibold">Middle Name</th>
                                <th scope="col" class="text-muted small fw-semibold">Last Name</th>
                                <th scope="col" class="text-muted small fw-semibold">Username</th>
                                <th scope="col" class="text-muted small fw-semibold">Email</th>
                                <th scope="col" class="text-muted small fw-semibold text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-muted small">@item.Id</td>
                                    <td>@item.FirstName</td>
                                    <td>@(string.IsNullOrEmpty(item.MiddleName) ? "-" : item.MiddleName)</td>
                                    <td>@item.LastName</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@item.UserName</span>
                                    </td>
                                    <td>@item.Email</td>
                                    <td>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <a class="btn btn-sm btn-outline-primary" 
                                               asp-controller="User" 
                                               asp-action="Upsert" 
                                               asp-route-id="@item.Id">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            <a class="btn btn-sm btn-outline-danger" 
                                               asp-action="Lock" 
                                               asp-controller="User" 
                                               asp-route-id="@item.Id">
                                                <i class="fas fa-lock"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">No users found. Create your first user to get started.</p>
                    <a class="btn btn-success mt-2" asp-action="Upsert" asp-controller="User">
                        <i class="bi bi-plus-circle me-1"></i>Add New User
                    </a>
                </div>
            }
        </div>
        
        @if (Model != null && Model.Any())
        {
            <div class="card-footer bg-white border-top text-muted small py-2">
                <span>Total Users: <strong>@Model.Count</strong></span>
            </div>
        }
    </div>
</div>