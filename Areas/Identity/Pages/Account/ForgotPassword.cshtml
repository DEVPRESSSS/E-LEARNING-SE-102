@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container vh-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8">
            <div class="card border-0">
                <div class="row g-0 align-items-center">

                    <!-- Illustration for medium and up screens -->
                    <div class="col-md-5 d-none d-md-flex justify-content-center p-4">
                        <img src="~/images/forgotpassword.svg"
                             alt="Forgot password illustration"
                             class="img-fluid"
                             style="max-height: 320px;" />
                    </div>

                    <!-- Forgot Password Form -->
                    <div class="col-12 col-md-7">
                        <div class="card-body p-4">

                            <h2 class="card-title text-center mb-2 fw-bold">Forgot Password?</h2>
                            <p class="text-center text-muted mb-3">
                                Enter your email and we’ll send you a password reset link.
                            </p>

                            <form method="post" id="forgotPasswordForm">
                                <div asp-validation-summary="All" class="text-danger mb-2" id="error-message"></div>

                                <!-- Email -->
                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <input asp-for="Input.Email" id="email" class="form-control form-control-sm"
                                           autocomplete="username"
                                           placeholder="name@example.com"
                                           maxlength="45" />
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <!-- Submit -->
                                <button type="submit"
                                        class="btn btn-sm w-100"
                                        style="background-color:#282A35;color:white;">
                                    Send Reset Link
                                </button>

                                <!-- Footer -->
                                <div class="text-center mt-2">
                                    <a asp-page="./Login"
                                       class="text-decoration-none small fw-semibold">
                                        Back to Login
                                    </a>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const email = document.getElementById('email');
            const errorDiv = document.getElementById('error-message');

            // Clear field on error
            if (errorDiv && errorDiv.textContent.trim() !== "") {
                email.value = "";
            }
        });
    </script>
}
