@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container vh-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8">
            <div class="card shadow">
                <div class="row g-0 align-items-center">

                    <div class="col-md-5 d-none d-md-flex justify-content-center p-4">
                        <img src="~/images/register.svg"
                             alt="Register illustration"
                             class="img-fluid"
                             style="max-height: 320px;" />
                    </div>

                    <div class="col-12 col-md-7">
                        <div class="card-body p-4">

                            <h2 class="card-title text-center mb-2 fw-bold">Create Account</h2>
                            <p class="text-center text-muted mb-3">
                                Sign up to get started
                            </p>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <!-- Names -->
                                <div class="row g-2">
                                    <div class="col-12 col-md-6">
                                        <label asp-for="Input.FirstName"></label>
                                        <input asp-for="Input.FirstName" class="form-control form-control-sm"
                                               placeholder="First name" maxlength="20" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label asp-for="Input.MiddleName"></label>
                                        <input asp-for="Input.MiddleName" class="form-control form-control-sm"
                                               placeholder="Middle name" maxlength="20" />
                                        <span asp-validation-for="Input.MiddleName" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Last name & Email -->
                                <div class="row g-2 mt-1">
                                    <div class="col-12 col-md-6">
                                        <label asp-for="Input.LastName"></label>
                                        <input asp-for="Input.LastName" class="form-control form-control-sm"
                                               placeholder="Last name" maxlength="20" />
                                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control form-control-sm"
                                               placeholder="name@example.com" maxlength="45" />
                                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Passwords -->
                                <div class="row g-2 mt-1">
                                    <div class="col-12 col-md-6">
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                        <div class="input-group">
                                            <input asp-for="Input.Password" id="password" type="password" class="form-control form-control-sm"
                                                placeholder="Password" maxlength="20" />
                                            <span class="input-group-text bg-light border-start-0 password-toggle" id="togglePassword"
                                                style="cursor:pointer;">
                                                <i class="fas fa-eye text-muted small" id="toggleIcon"></i>
                                            </span>
                                        </div>
                                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                        <div class="input-group">
                                            <input asp-for="Input.ConfirmPassword" id="confirmPassword" type="password" class="form-control form-control-sm"
                                                placeholder="Confirm password" maxlength="20" />
                                            <span class="input-group-text bg-light border-start-0 password-toggle" id="toggleConfirmPassword"
                                                style="cursor:pointer;">
                                                <i class="fas fa-eye text-muted small" id="toggleConfirmIcon"></i>
                                            </span>
                                        </div>
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                    </div>
                                </div>

                                <!-- Submit -->
                                <button type="submit"
                                        class="btn btn-sm w-100 mt-3"
                                        style="background-color:#282A35;color:white;">
                                    Sign Up
                                </button>

                                <!-- Footer -->
                                <div class="text-center mt-2">
                                    <span class="text-muted small">Already have an account?</span>
                                    <a asp-area="Identity" asp-page="/Account/Login"
                                       class="text-decoration-none small fw-semibold ms-1">
                                        Login
                                    </a>

                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Password toggle
            const togglePassword = document.getElementById('togglePassword');
            const password = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');

            togglePassword.addEventListener('click', function () {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                toggleIcon.classList.toggle('fa-eye');
                toggleIcon.classList.toggle('fa-eye-slash');
            });

            // Confirm Password toggle
            const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
            const confirmPassword = document.getElementById('confirmPassword');
            const toggleConfirmIcon = document.getElementById('toggleConfirmIcon');

            toggleConfirmPassword.addEventListener('click', function () {
                const type = confirmPassword.getAttribute('type') === 'password' ? 'text' : 'password';
                confirmPassword.setAttribute('type', type);
                toggleConfirmIcon.classList.toggle('fa-eye');
                toggleConfirmIcon.classList.toggle('fa-eye-slash');
            });
        });
    </script>
}