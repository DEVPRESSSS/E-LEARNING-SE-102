<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
            <div class="card border-1">
                <div class="card-body p-4 p-sm-5">
                    <h2 class="card-title text-center mb-4 fw-bold">Welcome Back</h2>
                    <p class="text-center text-muted mb-4">Please login to your account</p>

                    <form id="loginForm" id="account" method="post">
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />

                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />

                                <span class="input-group-text bg-light border-start-0 password-toggle" id="togglePassword">
                                    <i class="fas fa-eye text-muted" id="toggleIcon"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>

                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>

                            </div>
                        </div>

                        <button type="submit" class="btn w-100 py-2 mb-3" style="background-color: #282A35; color: white;">
                            Login
                        </button>

                        <div class="text-center">
                            <span class="text-muted small">Don't have an account?</span>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none small fw-semibold ms-1">Sign up</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
