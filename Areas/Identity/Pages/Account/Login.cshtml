@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container vh-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-sm-11 col-md-10 col-lg-9 col-xl-8">
            <div class="card border-0">
                <div class="row g-0 align-items-center">

                    <!-- Illustration for medium and up screens -->
                    <div class="col-md-5 d-none d-md-flex justify-content-center p-4">
                        <img src="~/images/login.svg"
                             alt="Login illustration"
                             class="img-fluid"
                             style="max-height: 320px;" />
                    </div>

                    <!-- Login Form -->
                    <div class="col-12 col-md-7">
                        <div class="card-body p-4">

                            <h2 class="card-title text-center mb-2 fw-bold">Welcome Back</h2>
                            <p class="text-center text-muted mb-3">Please login to your account</p>

                            <form id="loginForm" method="post">
                                <div asp-validation-summary="All" class="text-danger mb-2" id="error-message"></div>

                                <!-- Email -->
                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <input asp-for="Input.Email" id="email" class="form-control form-control-sm"
                                           autocomplete="username"
                                           placeholder="name@example.com"
                                           maxlength="45" />
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <!-- Password -->
                                <div class="mb-3">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <div class="input-group">
                                        <input asp-for="Input.Password" id="password" class="form-control form-control-sm"
                                               autocomplete="current-password"
                                               placeholder="Password"
                                               maxlength="20" />
                                        <span class="input-group-text bg-light border-start-0 password-toggle"
                                              id="togglePassword"
                                              style="cursor:pointer;">
                                            <i class="fas fa-eye text-muted small" id="toggleIcon"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <!-- Remember Me + Forgot -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        <label asp-for="Input.RememberMe" class="form-check-label small">
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    <a asp-page="./ForgotPassword" class="small text-decoration-none">Forgot password?</a>
                                </div>

                                <!-- Submit -->
                                <button type="submit"
                                        class="btn btn-sm w-100"
                                        style="background-color:#282A35;color:white;">
                                    Login
                                </button>

                                <!-- Footer -->
                                <div class="text-center mt-2">
                                    <span class="text-muted small">Don't have an account?</span>
                                    <a asp-controller="Home" asp-action="Register"
                                       class="text-decoration-none small fw-semibold ms-1">
                                        Sign Up
                                    </a>
                                </div>

                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const togglePassword = document.getElementById('togglePassword');
            const toggleIcon = document.getElementById('toggleIcon');
            const email = document.getElementById('email');
            const password = document.getElementById('password');
            const errorDiv = document.getElementById('error-message');

            // Clear fields on error
            if (errorDiv && errorDiv.textContent.trim() !== "") {
                email.value = "";
                password.value = "";
            }

            // Show / hide password
            if (togglePassword) {
                togglePassword.addEventListener('click', function () {
                    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                    password.setAttribute('type', type);
                    toggleIcon.classList.toggle('fa-eye');
                    toggleIcon.classList.toggle('fa-eye-slash');
                });
            }
        });
    </script>
}