@model List<Lesson>
    
@if (Model?.Count() > 0)
{
    <div class="container mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="lesson-sidebar" style="top: 20px; max-height: 100vh; overflow-y: auto; padding-right: 5px;">
                    <div class="list-group list-group-flush">
                        @foreach (var item in Model)
                        {
                            var selectedLesson = ViewData["SelectedLesson"] as Lesson;
                            var isActive = selectedLesson != null && selectedLesson.LessonId == item.LessonId;
                            <a asp-area="Learner"
                               asp-action="Lesson"
                               asp-controller="Home"
                               asp-route-lessonId ="@item.LessonId"
                           
                            class="list-group-item list-group-item-action @(isActive ? "active" : "")">
                                @item.Title
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                @{
                    var lesson = ViewData["SelectedLesson"] as Lesson;
                }

                @if (lesson != null)
                {
                    <div class="lesson-card border rounded shadow-sm p-3 mb-4" style="max-height: 100vh; overflow-y: auto;">
                        <div class="lesson-body mb-3 vh-100">
                            @if (lesson.Contents != null && lesson.Contents.Any())
                            {
                                @foreach (var content in lesson.Contents)
                                {
                                    <div class="content-item mb-2 p-2 border rounded d-flex justify-content-between align-items-center shadow-sm">
                                        <div>
                                            <h6 class="mb-1">@Html.Raw(content.Description)</h6>
                                            <small class="text-muted">
                                                @content.FileType
                                                @if (content.UploadedAt.HasValue)
                                                {
                                                    <span> â€¢ @content.UploadedAt.Value.ToString("dd MMM yyyy")</span>
                                                }
                                            </small>
                                        </div>
                                        <a href="@Url.Content(content.FilePath)" 
                                        class="btn btn-sm btn-outline-primary"
                                        target="_blank"
                                        rel="noopener noreferrer">
                                            View
                                        </a>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="empty-state text-center text-muted py-3">
                                    <p class="mb-0">No contents uploaded yet for this lesson</p>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="lesson-card border rounded shadow-sm p-4 text-center text-muted">
                        <p class="mb-0">Select a lesson from the sidebar to view details</p>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="row justify-content-center">
            <div class="col-md-5 text-center d-none d-md-block">
                <img src="~/images/no_data.svg"
                    alt="No Data illustration"
                    class="img-fluid"
                    style="max-height: 320px;" />
            </div>
        </div>
    </div>
}